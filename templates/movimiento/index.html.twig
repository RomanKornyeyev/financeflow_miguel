{% extends 'base.html.twig' %}

{% block title %}Mis Movimientos{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Mis Movimientos</h1>
        <a href="{{ path('movimiento_editar') }}" class="btn btn-success">+ Nuevo Movimiento</a>
    </div>

    {{ form_start(form, {'attr': {'class': 'mb-3'}}) }}
        <div class="row">
            <div class="col-md-2">{{ form_row(form.desde) }}</div>
            <div class="col-md-2">{{ form_row(form.hasta) }}</div>
            <div class="col-md-2">{{ form_row(form.tipoTransaccion) }}</div>
            <div class="col-md-2">{{ form_row(form.categoria) }}</div>
            <div class="col-md-2">{{ form_row(form.concepto) }}</div>
            <div class="col-md-2">{{ form_row(form.descripcion) }}</div>
        </div>
        
        <div class="mt-2 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Filtrar</button>
            <a href="{{ path('movimiento_index') }}" class="btn btn-outline-primary">Resetear Filtros</a>
        </div>
    {{ form_end(form) }}

    {% if pager.nbResults == 0 %}
        <div class="alert alert-info">No tienes movimientos registrados a√∫n.</div>
    {% else %}
        <table class="table table-striped">
            <thead>
                <tr>
                    {% set currentSort = app.request.get('sort') ?? '' %}
                    {% set currentDir = app.request.get('dir') ?? 'desc' %}

                    {% macro sort_link(label, field, currentSort, currentDir) %}
                        {% set newDir = (currentSort == field and currentDir == 'asc') ? 'desc' : 'asc' %}
                        <a href="{{ path('movimiento_index', app.request.query.all | merge({'sort': field, 'dir': newDir})) }}">
                            {{ label }}
                            {% if currentSort == field %}
                                <i class="fa-solid fa-arrow-{{ currentDir == 'asc' ? 'up' : 'down' }}"></i>
                            {% endif %}
                        </a>
                    {% endmacro %}

                    {% import _self as self %}

                    <th>{{ self.sort_link('Fecha', 'fechaMovimiento', currentSort, currentDir) }}</th>
                    <th>{{ self.sort_link('Tipo', 'tipoTransaccion', currentSort, currentDir) }}</th>
                    <th>{{ self.sort_link('Categor√≠a', 'categoria', currentSort, currentDir) }}</th>
                    <th>{{ self.sort_link('Concepto', 'concepto', currentSort, currentDir) }}</th>
                    <th>{{ self.sort_link('Importe', 'importe', currentSort, currentDir) }}</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for movimiento in pager.currentPageResults %}
                    <tr>
                        <td>{{ movimiento.fechaMovimiento|date('d/m/Y') }}</td>
                        <td>{{ movimiento.tipoTransaccion.value|capitalize }}</td>
                        <td>{{ movimiento.categoria.value|replace({'_': ' '})|capitalize }}</td>
                        <td>{{ movimiento.concepto }}</td>
                        <td>
                            {% if movimiento.tipoTransaccion.value == 'gasto' %}
                                -{{ movimiento.importe }} ‚Ç¨
                            {% else %}
                                +{{ movimiento.importe }} ‚Ç¨
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('movimiento_editar', {id: movimiento.id}) }}" class="btn btn-sm btn-primary">Editar</a>
                            <form method="post" action="{{ path('movimiento_eliminar', {id: movimiento.id}) }}" style="display:inline-block;" onsubmit="return confirm('¬øSeguro que quieres eliminar este movimiento?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('csrf_eliminar_movimiento' ~ movimiento.id) }}">
                                <button class="btn btn-sm btn-danger">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {# üìú Secci√≥n de paginaci√≥n #}
        <div class="navigation d-flex justify-content-center mt-4">
            {{ pagerfanta(pager, {
                proximity: 1,
                prev_message: 'Anterior',
                next_message: 'Siguiente',
            }) }}
        </div>
    {% endif %}
</div>
{% endblock %}